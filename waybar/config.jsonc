  "custom/omarchy": {
    "format": "<span font='omarchy'>\ue900</span>",
    "on-click": "omarchy-menu",
    "tooltip-format": "Omarchy Menu\n\nSuper + Alt + Space",
  },
  "custom/update": {
    "format": "ÔÄ°",
    "exec": "omarchy-update-available",
    "on-click": "omarchy-launch-floating-terminal-with-presentation omarchy-update",
    "tooltip-format": "Omarchy update available",
    "signal": 7,
    "interval": 3600,
  },
  "custom/cava_mviz": {
    "exec": "$HOME/.config/waybar/scripts/WaybarCava.sh",
    "format": "{}",
    "tooltip": false,
  },

  "custom/vpn": {
    "format": "{}",
    "interval": 3,
    "return-type": "json",
    "exec": "$HOME/.config/waybar/scripts/check-vpn-status.sh",
    "on-click": "$HOME/.config/waybar/scripts/toggle-vpn.sh",
    "on-click-right": "kitty -e $HOME/.config/waybar/scripts/select.sh",
    "signal": 8,
  },
  "cpu": {
    "interval": 5,
    "format": "Û∞çõ",
    "on-click": "$TERMINAL -e btop",
  },
  "clock": {
    "format": "{:L%A %H:%M}",
    "tooltip": true,
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode": "month",
      "mode-mon-col": 3,
      "weeks-pos": "right",
      "on-scroll": 1,
      "on-click-right": "mode",
      "format": {
        "weeks": "<span color='#99ffdd'><b></b></span>",
        "weekdays": "<span color='#ff6699'><b>{}</b></span>",
        "today": "<span color='#ff6699'><b><u>{}</u></b></span>",
      },
    },
    "on-click-right": "omarchy-launch-floating-terminal-with-presentation omarchy-tz-select",
  },
  "network": {
    "format-icons": ["Û∞§Ø", "Û∞§ü", "Û∞§¢", "Û∞§•", "Û∞§®"],
    "format": "{icon}",
    "format-wifi": "{icon}",
    "format-ethernet": "Û∞ÄÇ",
    "format-disconnected": "Û∞§Æ",
    "tooltip-format-wifi": "{essid} ({frequency} GHz)\n‚á£{bandwidthDownBytes}  ‚á°{bandwidthUpBytes}",
    "tooltip-format-ethernet": "‚á£{bandwidthDownBytes}  ‚á°{bandwidthUpBytes}",
    "tooltip-format-disconnected": "Disconnected",
    "interval": 3,
    "spacing": 1,
    "on-click": "omarchy-launch-wifi",
  },

  "battery": {
    //"interval": 5,
    "align": 0,
    "rotate": 0,
    //"bat": "BAT1",
    //"adapter": "ACAD",
    "states": {
      "good": 95,
      "warning": 20,
      "critical": 10,
    },
    "format": "{capacity}% {icon}",
    "format-charging": "{icon}",
    "format-plugged": "Ôá¶",
    "format-alt-click": "click",
    "format-full": "{icon} Full",
    "format-alt": "{icon} {time}",
    "format-icons": {
      "charging": ["Û∞¢ú", "Û∞ÇÜ", "Û∞Çá", "Û∞Çà", "Û∞¢ù", "Û∞Çâ", "Û∞¢û", "Û∞Çä", "Û∞Çã", "Û∞ÇÖ"],
      "default": ["Û∞Å∫", "Û∞Åª", "Û∞Åº", "Û∞ÅΩ", "Û∞Åæ", "Û∞Åø", "Û∞ÇÄ", "Û∞ÇÅ", "Û∞ÇÇ", "Û∞Åπ"],
    },
    "format-time": "{H}h {M}min",
    "tooltip": true,
    "tooltip-format": "{timeTo} {power}w",
    "on-click-right": "omarchy-menu power",
  },
  "bluetooth": {
    "format": "Ôäî",
    "format-disabled": "Û∞Ç≤",
    "format-connected": "Ôäî",
    "tooltip-format": "Devices connected: {num_connections}",
    "on-click": "blueberry",
  },
  "pulseaudio": {
    "format": "{icon}",
    "on-click": "$TERMINAL --class=Wiremix -e wiremix",
    "on-click-right": "pamixer -t",
    "tooltip-format": "Playing at {volume}%",
    "scroll-step": 5,
    "format-muted": "Óª®",
    "format-icons": {
      "default": ["ÔÄ¶", "ÔÄß", "Û∞ïæ", "ÔÄ®"],
    },
    "on-scroll-up": "~/.config/waybar/scripts/volume-control.sh +1",
    "on-scroll-down": "~/.config/waybar/scripts/volume-control.sh -1",
    "smooth-scrolling-threshold": 1.0,
  },
  "group/tray-expander": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 600,
      "children-class": "tray-group-item",
    },
    "modules": ["custom/expand-icon", "tray"],
  },
  "custom/expand-icon": {
    "format": "ÔÇã ",
    "tooltip": false,
  },
  "custom/screenrecording-indicator": {
    "on-click": "omarchy-cmd-screenrecord",
    "exec": "$OMARCHY_PATH/default/waybar/indicators/screen-recording.sh",
    "signal": 8,
    "return-type": "json",
  },

  "backlight": {
    "interval": 2,
    "align": 0,
    "rotate": 0,
    //"format": "{icon} {percent}%",
    "format": "{icon}",
    "format-icons": [
      "Óèï",
      "Óèñ",
      "Óèó",
      "Óèò",
      "Óèô",
      "Óèö",
      "Óèõ",
      "Óèú",
      "Óèù",
      "Óèû",
      "Óèü",
      "Óè†",
      "Óè°",
      "Óè¢",
      "Óè£",
    ],
    "tooltip": false,
    "icon-size": 10,
    "on-scroll-up": "~/.config/waybar/scripts/backlight-osd.sh raise",
    "on-scroll-down": "~/.config/waybar/scripts/backlight-osd.sh lower",
    "scroll-step": 5,
    "smooth-scrolling-threshold": 1.0,
  },

  "tray": {
    "icon-size": 12,
    "spacing": 12,
  },
}
